    <div class='flex gap-2 w-1/3 items-center'>
      <img src='/favicon.svg' width='50' height='50' alt='recipes icon'/>
      <a href="/"><h3 class='font-bold text-sky-700 hover:text-black hover:underline font-heading text-3xl'>Rob's Recipes</h3></a>
      <SearchBar client:load />
    </div>
    <div class="w-1/3 flex justify-center">
      <ul class='flex gap-8 items-center text-lg font-bold'>
        <li class='underline-offset-4 decoration-2 hover:underline hover:text-sky-700'>
          <a href='/browse'>Browse</a>
        </li>
        <li class='underline-offset-4 decoration-2 hover:underline hover:text-sky-700'>
          <a href='/write'>Create</a>
        </li>
        <li class='underline-offset-4 decoration-2 hover:underline hover:text-sky-700'>
          <a href='/about'>Categories</a>
        </li>
